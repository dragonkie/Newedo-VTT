<div class="tab-content">
    <li class="items-header flexrow collapsible">
        <span>Rote</span>
        <span>Skill</span>
        <span>Cost</span>
        <span>Controls</span>
    </li>
    <ol class="items-list">
        {{#each itemTypes.rote as | rote key |}}

            <li class="item flexrow" data-item-uuid="{{rote.uuid}}" style="text-align: center;">
                {{!-- Link to the fate opens up the item sheet --}}
                <span style="display: flex; flex-direction: row; align-items: center; justify-content: flex-start;">
                    <img src="{{rote.img}}" width="30" height="30">
                    <a style="margin-left: 4px;" data-action="editItem">{{rote.name}}</a>
                </span>

                <span class="item-detail">{{rote.system.skill.label}}</span>
                <span class="item-detail">{{rote.system.cost}}</span>
                <span class="item-detail">{{rote.system.tn}}</span>

                <span class="item-controls">
                    <a data-action="useItem" data-use="cast"><i class="fa-solid fa-book-blank"></i></a>
                    {{#if ../isEditMode}}<a data-action="deleteItem"><i class="fa-solid fa-trash"></i></a>{{/if}}
                </span>

            </li>

        {{/each}}
    </ol>
</div>